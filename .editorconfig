root = true

# unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# set default charset
[*.{js}]
charset = utf-8

# indentation override for all JS under lib directory
[{flow-typed/**.js,src/**.js,__tests__/**.js}]
indent_style = space
indent_size = 2

# setting formatting for general configuration files
[{package.json,.travis.yml,.eslintrc.json}]
indent_style = space
indent_size = 2
